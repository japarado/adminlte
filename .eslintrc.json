{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
		"no-var": "warn",
		"prefer-const": "warn",
		"arrow-parens": "warn",
		"prefer-arrow-callback": "warn"
	}
}
